{
  "manifest_version": 3,
  "name": "Spam Filter Extension",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}